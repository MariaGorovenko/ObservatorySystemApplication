<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.observatory.observatorysystem.client.controller.scientistdashboard.MyObservationsController"
      spacing="20" alignment="TOP_CENTER">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Мои заявки на наблюдение" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Панель управления -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Обновить" onAction="#handleRefresh" style="-fx-font-size: 12;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Всего заявок:" style="-fx-font-size: 12;"/>
        <Label fx:id="totalCountLabel" text="0" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
        <Button text="Закрыть" onAction="#handleClose" style="-fx-font-size: 12;"/>
    </HBox>

    <!-- Фильтр по статусу -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Фильтр по статусу:" style="-fx-font-size: 12;"/>
        <ComboBox fx:id="statusFilterCombo" style="-fx-pref-width: 150;"/>
    </HBox>

    <!-- Таблица заявок -->
    <TableView fx:id="observationsTable" VBox.vgrow="ALWAYS" prefHeight="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="objectNameColumn" text="Объект" prefWidth="150"/>
            <TableColumn fx:id="programColumn" text="Программа" prefWidth="150"/>
            <TableColumn fx:id="telescopeColumn" text="Телескоп" prefWidth="120"/>
            <TableColumn fx:id="requestedStartColumn" text="Начало" prefWidth="120"/>
            <TableColumn fx:id="requestedEndColumn" text="Окончание" prefWidth="120"/>
            <TableColumn fx:id="priorityColumn" text="Приоритет" prefWidth="80"/>
            <TableColumn fx:id="statusColumn" text="Статус" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Действия" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>