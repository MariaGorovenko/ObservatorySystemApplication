<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.observatory.observatorysystem.client.controller.scientistdashboard.CreateObservationController"
      spacing="20" alignment="TOP_CENTER"
      style="-fx-background-color: rgba(20, 30, 50); -fx-padding: 20;"
      stylesheets="@/static/css/styles.css">

    <Label text="Подача заявки на наблюдение" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <GridPane hgap="10" vgap="10" style="-fx-pref-width: 600;">
        <columnConstraints>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="300"/>
        </columnConstraints>

        <Label text="Научная программа:*" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <ComboBox fx:id="programCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Телескоп:*" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <ComboBox fx:id="telescopeCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Объект наблюдения:*" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <TextField fx:id="objectNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                   style="-fx-background-color: rgba(20, 30, 50); -fx-text-fill: white; -fx-border-color: white;"/>

        <Label text="Координаты (RA Dec):" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <TextField fx:id="coordinatesField" promptText="например: 12h34m56s +12°34′56″"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"
                   style="-fx-background-color: rgba(20, 30, 50); -fx-text-fill: white; -fx-border-color: white;"/>

        <Label text="Спектральный диапазон:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <TextField fx:id="spectralRangeField" promptText="например: 400-700 nm"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"
                   style="-fx-background-color: rgba(20, 30, 50); -fx-text-fill: white; -fx-border-color: white;"/>

        <Label text="Предполагаемое начало:*" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <HBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="1">
            <DatePicker fx:id="startDatePicker"/>
            <Spinner fx:id="startHourSpinner" prefWidth="60" promptText="чч"/>
            <Label text=":" style="-fx-text-fill: white;"/>
            <Spinner fx:id="startMinuteSpinner" prefWidth="60" promptText="мм"/>
        </HBox>

        <Label text="Предполагаемое окончание:*" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <HBox spacing="5" GridPane.rowIndex="6" GridPane.columnIndex="1">
            <DatePicker fx:id="endDatePicker"/>
            <Spinner fx:id="endHourSpinner" prefWidth="60" promptText="чч"/>
            <Label text=":" style="-fx-text-fill: white;"/>
            <Spinner fx:id="endMinuteSpinner" prefWidth="60" promptText="мм"/>
        </HBox>

        <Label text="Приоритет:*" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <ComboBox fx:id="priorityCombo" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Дополнительные сведения:" GridPane.rowIndex="8" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <TextArea fx:id="descriptionArea" prefRowCount="3" GridPane.rowIndex="8" GridPane.columnIndex="1"
                  style="-fx-text-fill: rgba(20, 30, 50); -fx-border-color: white;"/>

        <HBox spacing="10" GridPane.rowIndex="9" GridPane.columnIndex="1">
            <Button text="Подать заявку" onAction="#handleSubmit"
                    style="-fx-background-color: white; -fx-text-fill: rgba(20, 30, 50); -fx-font-size: 14;"/>
            <Button text="Отмена" onAction="#handleCancel"
                    style="-fx-background-color: white; -fx-text-fill: rgba(20, 30, 50); -fx-font-size: 14;"/>
        </HBox>
    </GridPane>

</VBox>