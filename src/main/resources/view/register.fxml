<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.observatory.observatorysystem.client.controller.RegisterController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Text text="Регистрация в системе" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="welcomeLabel" text="Панель регистрации" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Назад" onAction="#handleBack" style="-fx-font-size: 12;"/>
    </HBox>

    <VBox spacing="10" style="-fx-pref-width: 300;">
        <Label text="Логин:*"/>
        <TextField fx:id="usernameField" promptText="Придумайте логин"/>

        <Label text="Пароль:*"/>
        <PasswordField fx:id="passwordField" promptText="Придумайте пароль (мин. 6 символов)"/>

        <Label text="Подтверждение пароля:*"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Повторите пароль"/>

        <Label text="ФИО:*"/>
        <TextField fx:id="fullNameField" promptText="Введите ваше полное имя"/>

        <Label text="Email:"/>
        <TextField fx:id="emailField" promptText="Введите email (необязательно)"/>

        <Button fx:id="registerButton" text="Зарегистрироваться" onAction="#handleRegister"
                style="-fx-font-size: 14; -fx-pref-height: 35; -fx-pref-width: 200;"/>
    </VBox>

</VBox>