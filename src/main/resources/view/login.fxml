<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="30" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.observatory.observatorysystem.client.controller.LoginController"
      stylesheets="@/static/css/styles.css"
      styleClass="root-pane">

    <padding>
        <Insets top="40" right="60" bottom="40" left="60"/>
    </padding>

    <Text text="Система астрономической обсерватории" styleClass="title"/>
    <Text text="Вход в систему" styleClass="subtitle"/>

    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="header-bar">
        <Label text="Панель аутентификации" styleClass="header-label"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Назад" onAction="#handleBack" styleClass="back-button"/>
    </HBox>

    <VBox spacing="15" styleClass="form-container">
        <Label text="Логин:" styleClass="field-label"/>
        <TextField fx:id="usernameField" promptText="Введите логин" styleClass="text-field"/>

        <Label text="Пароль:" styleClass="field-label"/>
        <PasswordField fx:id="passwordField" promptText="Введите пароль" styleClass="text-field"/>

        <Button fx:id="loginButton" text="Войти" onAction="#handleLogin" styleClass="action-button"/>
    </VBox>
</VBox>