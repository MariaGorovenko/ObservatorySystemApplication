<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.observatory.observatorysystem.client.controller.admindashboard.TelescopesManagementController"
      spacing="15" alignment="TOP_CENTER"
      style="-fx-background-color: rgba(20, 30, 50); -fx-padding: 20;"
      stylesheets="@/static/css/styles.css">

    <Label text="Управление телескопами" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <!-- Панель управления -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Обновить" onAction="#handleRefresh" style="-fx-background-color: white; -fx-text-fill: rgba(20, 30, 50);"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Закрыть" onAction="#handleClose" style="-fx-background-color: white; -fx-text-fill: rgba(20, 30, 50);"/>
    </HBox>

    <!-- Таблица телескопов -->
    <Label text="Существующие телескопы:" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: white;"/>
    <TableView fx:id="telescopesTable" VBox.vgrow="ALWAYS" prefHeight="300" style="-fx-border-color: white; -fx-border-width: 1;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="nameColumn" text="Название" prefWidth="150" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="typeColumn" text="Тип" prefWidth="120" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="locationColumn" text="Местоположение" prefWidth="200" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="operationalColumn" text="Статус" prefWidth="100" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="actionsColumn" text="Действия" prefWidth="200" style="-fx-text-fill: rgba(20, 30, 50);"/>
        </columns>
    </TableView>

    <!-- Форма добавления нового телескопа -->
    <Label text="Добавить новый телескоп:" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: white;"/>
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>

        <Label text="Название:*" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <TextField fx:id="newNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-background-color: rgba(20, 30, 50); -fx-text-fill: white; -fx-border-color: white;"/>

        <Label text="Тип:*" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <TextField fx:id="newTypeField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-background-color: rgba(20, 30, 50); -fx-text-fill: white; -fx-border-color: white;"/>

        <Label text="Местоположение:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <TextField fx:id="newLocationField" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-background-color: rgba(20, 30, 50); -fx-text-fill: white; -fx-border-color: white;"/>

        <Label text="Статус:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <CheckBox fx:id="newOperationalCheckBox" text="Рабочий" selected="true"
                  GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-text-fill: white;"/>

        <Button fx:id="addButton" text="Добавить телескоп" onAction="#handleAddTelescope"
                GridPane.rowIndex="4" GridPane.columnIndex="1"
                style="-fx-background-color: white; -fx-text-fill: rgba(20, 30, 50); -fx-pref-width: 150;"/>
    </GridPane>

</VBox>