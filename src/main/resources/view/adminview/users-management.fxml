<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.observatory.observatorysystem.client.controller.admindashboard.UsersManagementController"
      spacing="15" alignment="TOP_CENTER">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Управление пользователями" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Обновить" onAction="#handleRefresh" style="-fx-font-size: 12;"/>
        <Button text="Изменить роль" onAction="#handleChangeRole" style="-fx-font-size: 12;"/>
    </HBox>

    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="usernameColumn" text="Логин" prefWidth="120"/>
            <TableColumn fx:id="fullNameColumn" text="ФИО" prefWidth="200"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
            <TableColumn fx:id="roleColumn" text="Роль" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>