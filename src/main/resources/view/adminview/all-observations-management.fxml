<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.observatory.observatorysystem.client.controller.admindashboard.AllObservationsController"
      spacing="20" alignment="TOP_CENTER">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Управление всеми заявками" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Панель фильтрации -->
    <GridPane hgap="10" vgap="10" style="-fx-pref-width: 800;">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="100"/>
        </columnConstraints>

        <Label text="Телескоп:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="filterTelescopeCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Статус:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <ComboBox fx:id="filterStatusCombo" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Приоритет:" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
        <ComboBox fx:id="filterPriorityCombo" GridPane.rowIndex="0" GridPane.columnIndex="5"/>

        <Label text="С:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="filterStartDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="По:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <DatePicker fx:id="filterEndDate" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Button text="Фильтровать" onAction="#handleFilter" GridPane.rowIndex="1" GridPane.columnIndex="4"
                style="-fx-font-size: 12;"/>
        <Button text="Сбросить" onAction="#handleResetFilter" GridPane.rowIndex="1" GridPane.columnIndex="5"
                style="-fx-font-size: 12;"/>
    </GridPane>

    <!-- Панель управления -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Обновить" onAction="#handleRefresh" style="-fx-font-size: 12;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Всего заявок:" style="-fx-font-size: 12;"/>
        <Label fx:id="totalCountLabel" text="0" style="-fx-font-size: 12; -fx-font-weight: bold;"/>
        <Button text="Закрыть" onAction="#handleClose" style="-fx-font-size: 12;"/>
    </HBox>

    <!-- Таблица заявок -->
    <TableView fx:id="observationsTable" VBox.vgrow="ALWAYS" prefHeight="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="objectNameColumn" text="Объект" prefWidth="150"/>
            <TableColumn fx:id="programColumn" text="Программа" prefWidth="150"/>
            <TableColumn fx:id="telescopeColumn" text="Телескоп" prefWidth="120"/>
            <TableColumn fx:id="userColumn" text="Ученый" prefWidth="150"/>
            <TableColumn fx:id="requestedStartColumn" text="Начало" prefWidth="120"/>
            <TableColumn fx:id="requestedEndColumn" text="Окончание" prefWidth="120"/>
            <TableColumn fx:id="priorityColumn" text="Приоритет" prefWidth="80"/>
            <TableColumn fx:id="statusColumn" text="Статус" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Действия" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>