<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.observatory.observatorysystem.client.controller.admindashboard.AllObservationsController"
      spacing="15" alignment="TOP_CENTER"
      style="-fx-background-color: rgba(20, 30, 50); -fx-padding: 20;"
      stylesheets="@/static/css/styles.css">

    <Label text="Управление всеми заявками" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <!-- Панель фильтрации -->
    <GridPane hgap="10" vgap="10" style="-fx-pref-width: 800;">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="100"/>
        </columnConstraints>

        <Label text="Телескоп:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <ComboBox fx:id="filterTelescopeCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Статус:" GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-text-fill: white;"/>
        <ComboBox fx:id="filterStatusCombo" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Приоритет:" GridPane.rowIndex="0" GridPane.columnIndex="4" style="-fx-text-fill: white;"/>
        <ComboBox fx:id="filterPriorityCombo" GridPane.rowIndex="0" GridPane.columnIndex="5"/>

        <Label text="С:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: white;"/>
        <DatePicker fx:id="filterStartDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="По:" GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-text-fill: white;"/>
        <DatePicker fx:id="filterEndDate" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Button text="Фильтровать" onAction="#handleFilter" GridPane.rowIndex="1" GridPane.columnIndex="4"
                style="-fx-background-color: white; -fx-text-fill: rgba(20, 30, 50);"/>
        <Button text="Сбросить" onAction="#handleResetFilter" GridPane.rowIndex="1" GridPane.columnIndex="5"
                style="-fx-background-color: white; -fx-text-fill: rgba(20, 30, 50);"/>
    </GridPane>

    <!-- Панель управления -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Обновить" onAction="#handleRefresh" style="-fx-background-color: white; -fx-text-fill: rgba(20, 30, 50);"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Всего заявок:" style="-fx-font-size: 12; -fx-text-fill: white;"/>
        <Label fx:id="totalCountLabel" text="0" style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: white;"/>
        <Button text="Закрыть" onAction="#handleClose" style="-fx-background-color: white; -fx-text-fill: rgba(20, 30, 50);"/>
    </HBox>

    <!-- Таблица заявок -->
    <TableView fx:id="observationsTable" VBox.vgrow="ALWAYS" prefHeight="400" style="-fx-border-color: white; -fx-border-width: 1;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="objectNameColumn" text="Объект" prefWidth="150" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="programColumn" text="Программа" prefWidth="150" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="telescopeColumn" text="Телескоп" prefWidth="120" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="userColumn" text="Ученый" prefWidth="150" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="requestedStartColumn" text="Начало" prefWidth="120" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="requestedEndColumn" text="Окончание" prefWidth="120" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="priorityColumn" text="Приоритет" prefWidth="80" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="statusColumn" text="Статус" prefWidth="100" style="-fx-text-fill: rgba(20, 30, 50);"/>
            <TableColumn fx:id="actionsColumn" text="Действия" prefWidth="200" style="-fx-text-fill: rgba(20, 30, 50);"/>
        </columns>
    </TableView>

</VBox>